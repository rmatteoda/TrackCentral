<%- model_class = User -%>
<div class="page-header">
  <h3>Usuario</h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:celular) %>:</strong></dt>
  <dd><%= @user.celular %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @user.role %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Volver',
              users_path, :class => 'btn'  %>
  <%= link_to 'Editar',
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to 'Eliminar',
              user_path(@user),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar el usuario?')),
              :class => 'btn btn-danger' %>
</div>
