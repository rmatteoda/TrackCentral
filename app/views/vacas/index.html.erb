<%- model_class = Vaca -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
</div>
    <div>        
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
    </div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:caravana) %></th>
      <th><%= model_class.human_attribute_name(:raza) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:nodo_id) %></th>
      <th>Alarma</th>
      <th>Detalle</th>
      <% if signed_in? && current_user.admin?%>
       <th>Accion</th>
       <% end %>
    </tr>
  </thead>
  <tbody>
    <% @vacas.each do |vaca| %>
      <tr>
        <td><%= vaca.caravana %></td>
        <td><%= vaca.raza %></td>
        <td><%= vaca.estado %></td>
        <td><%= vaca.nodo_id %></td>
        <td></td>
        <td><%= link_to 'Ver', vaca_path(vaca), :class => 'btn btn-mini' %></td>
        
        <% if signed_in? && current_user.admin?%>
        <td>
          <%= link_to 'Editar',
                      edit_vaca_path(vaca), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar',vaca_path(vaca),:method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar la vaca?')), :class => 'btn btn-mini btn-danger' %>
        </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
<%= will_paginate @vacas %>
</div> 
  <% if signed_in? && current_user.admin?%>  
    <%= link_to 'Agregar Vaca', new_vaca_path,:class => 'btn btn-primary' %>
  <% end %>
